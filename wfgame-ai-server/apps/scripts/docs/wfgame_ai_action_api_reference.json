        "description": "WFGameAI Action API 快速参考",
        "📚 文档导航": {
            "精简版技术文档": "docs/WFGameAI回放功能技术文档_精简版.md",
            "Action使用手册（精简版）": "docs/WFGameAI_Action_使用手册_精简版.md",
            "完整技术文档": "docs/WFGameAI回放功能完整技术文档.md",
            "完整Action手册": "docs/WFGameAI_Action_使用手册.md"
        },
        "🎯 快速参考": {
            "常用Actions": {
                "click": "基础点击操作",
                "input": "文本输入（支持${account:username}/${account:password}）",
                "delay": "延时等待",
                "swipe": "滑动操作",
                "wait_if_exists": "条件等待（热更新处理）",
                "app_start": "应用启动"
            },
            "核心特性": {
                "账号变量": "${account:username}, ${account:password}, ${account:phone}",
                "智能定位": "text_hints, resource_id_keywords, class_types",
                "容错机制": "skip_if_not_found, retry_count, retry_interval",
                "时序控制": "polling_interval, max_duration, stability_duration"
            }
        },
        "⭐ 推荐Action模式": {
            "智能点击": {
                "action": "click",
                "target_selector": {
                    "text_hints": [
                        "登录",
                        "进入游戏"
                    ],
                    "resource_id_keywords": [
                        "login",
                        "btn"
                    ],
                    "skip_if_not_found": true,
                    "retry_count": 3
                }
            },
            "账号输入": {
                "action": "input",
                "text": "${account:username}",
                "target_selector": {
                    "placeholder": "请输入用户名",
                    "clear_previous_text": true
                }
            },
            "热更新等待": {
                "action": "wait_if_exists",
                "class": "system-newResources",
                "polling_interval": 5000,
                "max_duration": 300
            },
            "登录流程": [
                {
                    "action": "wait_if_exists",
                    "class": "system-newResources",
                    "max_duration": 300
                },
                {
                    "action": "delay",
                    "params": {
                        "seconds": 3
                    }
                },
                {
                    "action": "click",
                    "target_selector": {
                        "text_hints": [
                            "其他登录方式"
                        ]
                    }
                },
                {
                    "action": "input",
                    "text": "${account:username}",
                    "target_selector": {
                        "placeholder": "请输入用户名"
                    }
                },
                {
                    "action": "input",
                    "text": "${account:password}",
                    "target_selector": {
                        "placeholder": "请输入密码"
                    }
                },
                {
                    "action": "click",
                    "target_selector": {
                        "text_hints": [
                            "登录",
                            "立即登录"
                        ]
                    }
                }
            ]
        },
        "🚀 建议新增Actions": {
            "wait_for_stable": {
                "说明": "等待界面稳定",
                "优先级": "⭐⭐⭐",
                "解决": "步骤间界面过渡时间不确定"
            },
            "retry_until_success": {
                "说明": "重试直到成功",
                "优先级": "⭐⭐⭐",
                "解决": "偶发性元素定位失败"
            },
            "wait_for_appearance": {
                "说明": "等待元素出现",
                "优先级": "⭐⭐⭐",
                "解决": "界面状态转换时序问题"
            }
        }
    }
