    {
      "step": 12,
      "detection_method": "ai",
      "action": "wait_for_stable",
      "duration": 3,
      "max_wait": 10,
      "auto_handle_dialog": true,
      "dialog_max_wait": 10.0,
      "dialog_retry_interval": 1.0,
      "dialog_duration": 2.0,
      "remark": "等待登录完成（示例：单步强化弹窗处理，处理可能出现的权限弹窗）"
